[sshd]

# Enable the SSH jail
enabled = true

# Filter to use
filter = sshd

# Log path to monitor
logpath = {{ ssh_log_path }}

# SSH port to monitor
port = {{ ssh_port }}

# Use DEFAULT values for bantime, findtime, maxretry
# These are inherited from jail.local unless overridden here

# Optional: Override ban time specifically for SSH (in seconds)
# bantime = {{ bantime }}

# Optional: Override find time specifically for SSH (in seconds)
# findtime = {{ findtime }}

# Optional: Override max retry specifically for SSH
# maxretry = {{ maxretry }}
