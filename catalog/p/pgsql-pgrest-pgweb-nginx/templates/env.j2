# PostgreSQL Configuration
POSTGRES_DB={{ postgres_db }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}

# PostgREST Configuration
POSTGREST_ROLE={{ postgrest_role }}
POSTGREST_PASSWORD={{ postgrest_password }}
POSTGREST_ANON_ROLE={{ postgrest_anon_role }}
POSTGREST_JWT_SECRET={{ postgrest_jwt_secret }}
POSTGREST_SCHEMAS={{ postgrest_schemas | default('public') }}

# JWT Auth Service Configuration
TOKEN_EXPIRY_HOURS=24

# Authelia Configuration
AUTHELIA_JWT_SECRET={{ authelia_jwt_secret }}
AUTHELIA_SESSION_SECRET={{ authelia_session_secret }}
AUTHELIA_STORAGE_ENCRYPTION_KEY={{ authelia_storage_encryption_key }}
