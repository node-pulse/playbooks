version: '3'

services:
  db:
    image: postgres:18.1-alpine
    container_name: {{ project_name }}-db
    environment:
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    volumes:
      - {{ data_dir }}/postgres:/var/lib/postgresql/data
    ports:
      - "127.0.0.1:{{ postgres_port }}:5432"  # Bind to localhost only - use SSH tunnel or configure firewall for remote access
    restart: always
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER} -d ${POSTGRES_DB}"]
      interval: 5s
      timeout: 5s
      retries: 5

  postgrest:
    image: postgrest/postgrest:v12.2.3
    container_name: {{ project_name }}-postgrest
    ports:
      - "127.0.0.1:{{ postgrest_port }}:3000"  # Bind to localhost only - only accessible via Nginx
    environment:
      PGRST_DB_URI: postgres://${POSTGREST_ROLE}:${POSTGREST_PASSWORD}@db:5432/${POSTGRES_DB}
      PGRST_DB_SCHEMAS: ${POSTGREST_SCHEMAS:-public}
      PGRST_DB_ANON_ROLE: ${POSTGREST_ANON_ROLE}
      PGRST_JWT_SECRET: ${POSTGREST_JWT_SECRET}
      PGRST_SERVER_HOST: 0.0.0.0
      PGRST_SERVER_PORT: 3000
      # CORS - only allow requests from the configured domain
      PGRST_SERVER_CORS_ALLOWED_ORIGINS: "https://{{ domain }}"
    depends_on:
      db:
        condition: service_healthy
    restart: always
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s

  pgweb:
    image: sosedoff/pgweb:0.16.2
    container_name: {{ project_name }}-pgweb
    ports:
      - "127.0.0.1:{{ pgweb_port }}:8081"  # Bind to localhost only - only accessible via Nginx + Authelia 2FA
    environment:
      DATABASE_URL: postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?sslmode=disable
    depends_on:
      db:
        condition: service_healthy
    restart: always
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:8081/ || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s

  auth:
    build:
      context: {{ install_dir }}
      dockerfile: Dockerfile.auth
    container_name: {{ project_name }}-auth
    ports:
      - "127.0.0.1:{{ auth_port }}:5000"  # Bind to localhost only - only accessible via Nginx
    environment:
      POSTGREST_JWT_SECRET: ${POSTGREST_JWT_SECRET}
      TOKEN_EXPIRY_HOURS: ${TOKEN_EXPIRY_HOURS:-24}
      API_USER_PASSWORD: ${API_USER_PASSWORD}
      API_ADMIN_PASSWORD: ${API_ADMIN_PASSWORD}
    restart: always
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:5000/health || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s

  authelia:
    image: authelia/authelia:4.38.16
    container_name: {{ project_name }}-authelia
    ports:
      - "127.0.0.1:{{ authelia_port }}:9091"  # Bind to localhost only - only accessible via Nginx
    volumes:
      - {{ install_dir }}/authelia-config.yml:/config/configuration.yml:ro
      - {{ install_dir }}/authelia-users.yml:/config/users_database.yml:ro
      - {{ data_dir }}/authelia:/data
    environment:
      TZ: UTC
    restart: always
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:9091/api/health || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 15s
