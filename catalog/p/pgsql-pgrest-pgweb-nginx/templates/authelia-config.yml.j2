---
# Authelia Configuration
# Reference: https://www.authelia.com/configuration/prologue/introduction/

server:
  # Include the subpath in the address so Authelia generates correct base href
  address: 'tcp://0.0.0.0:9091{{ authelia_path }}'
  endpoints:
    authz:
      forward-auth:
        implementation: ForwardAuth
  headers:
    # Custom CSP that allows Authelia to work with browser extensions and Cloudflare
    # The ${NONCE} placeholder is replaced with the actual nonce by Authelia
    csp_template: "default-src 'self'; frame-src 'none'; object-src 'none'; style-src 'self' 'nonce-${NONCE}' 'unsafe-inline'; script-src 'self' 'nonce-${NONCE}'; frame-ancestors 'none'; base-uri 'self'"

log:
  level: info

theme: auto

# JWT secret for password reset tokens
identity_validation:
  reset_password:
    jwt_secret: {{ authelia_jwt_secret }}

totp:
  issuer: {{ domain }}
  period: 30
  skew: 1

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      # Authelia recommended parameters for strong security
      iterations: 3
      salt_length: 16
      parallelism: 4
      memory: 65536  # 64 MiB (was 64 KiB - now 1000x stronger)
      key_length: 32

access_control:
  default_policy: deny
  rules:
    # Protect pgweb - require authentication
    - domain: {{ domain }}
      policy: two_factor
      resources:
        - '^{{ pgweb_path }}/.*$'

session:
  name: authelia_session
  secret: {{ authelia_session_secret }}
  expiration: 1h
  inactivity: 5m
  cookies:
    - domain: {{ domain }}
      authelia_url: https://{{ domain }}{{ authelia_path }}/
      default_redirection_url: https://{{ domain }}{{ pgweb_path }}/

regulation:
  max_retries: 5
  find_time: 2m
  ban_time: 5m

storage:
  encryption_key: {{ authelia_storage_encryption_key }}
  local:
    path: /data/db.sqlite3

notifier:
  filesystem:
    filename: /data/notification.txt
