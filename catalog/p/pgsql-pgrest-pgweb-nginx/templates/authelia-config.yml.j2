---
# Authelia Configuration
# Reference: https://www.authelia.com/configuration/prologue/introduction/

server:
  host: 0.0.0.0
  port: 9091
  path: {{ authelia_path }}

log:
  level: info

theme: auto

jwt_secret: {{ authelia_jwt_secret }}

default_redirection_url: {{ 'https' if enable_ssl else 'http' }}://{{ domain }}{{ pgweb_path }}/

totp:
  issuer: {{ domain }}
  period: 30
  skew: 1

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      # Authelia recommended parameters for strong security
      iterations: 3
      salt_length: 16
      parallelism: 4
      memory: 65536  # 64 MiB (was 64 KiB - now 1000x stronger)
      key_length: 32

access_control:
  default_policy: deny
  rules:
    # Protect pgweb - require authentication
    - domain: {{ domain }}
      policy: two_factor
      resources:
        - '^{{ pgweb_path }}/.*$'

session:
  name: authelia_session
  secret: {{ authelia_session_secret }}
  expiration: 1h
  inactivity: 5m
  domain: {{ domain }}

regulation:
  max_retries: 5
  find_time: 2m
  ban_time: 5m

storage:
  encryption_key: {{ authelia_storage_encryption_key }}
  local:
    path: /data/db.sqlite3

notifier:
  filesystem:
    filename: /data/notification.txt
