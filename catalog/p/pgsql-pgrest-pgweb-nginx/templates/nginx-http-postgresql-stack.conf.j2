server {
    listen 80;
    listen [::]:80;
    server_name {{ domain }};

{% if enable_ssl %}
    # For Certbot HTTP-01 challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect all other traffic to HTTPS (will be configured after SSL cert is obtained)
    location / {
        return 301 https://$host$request_uri;
    }
{% else %}
    # HTTP-only mode (SSL disabled)

    # Authelia authentication endpoint (internal only)
    location /authelia-verify {
        internal;
        proxy_pass http://localhost:{{ authelia_port }}/api/verify;
        proxy_set_header X-Original-URL $scheme://$http_host$request_uri;
        proxy_set_header X-Forwarded-Method $request_method;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Uri $request_uri;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Content-Length "";
        proxy_pass_request_body off;
    }

    # Authelia portal - 2FA login page
    location {{ authelia_path }}/ {
        proxy_pass http://localhost:{{ authelia_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Original-URL $scheme://$http_host$request_uri;
    }

    # pgweb - protected by Authelia
    location {{ pgweb_path }}/ {
        auth_request /authelia-verify;
        auth_request_set $user $upstream_http_remote_user;
        auth_request_set $groups $upstream_http_remote_groups;
        auth_request_set $name $upstream_http_remote_name;
        auth_request_set $email $upstream_http_remote_email;

        # Redirect to Authelia login if not authenticated
        error_page 401 = @authelia_redirect;

        proxy_pass http://localhost:{{ pgweb_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Pass auth headers to backend
        proxy_set_header Remote-User $user;
        proxy_set_header Remote-Groups $groups;
        proxy_set_header Remote-Name $name;
        proxy_set_header Remote-Email $email;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # PostgREST API - requires JWT token
    location {{ postgrest_path }}/ {
        proxy_pass http://localhost:{{ postgrest_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Increase timeouts for long-running queries
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Pass through headers
        proxy_pass_request_headers on;
    }

    # Auth service - JWT token generation
    location {{ auth_path }}/ {
        proxy_pass http://localhost:{{ auth_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Increase timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }

    # Authelia redirect location
    location @authelia_redirect {
        return 302 http://{{ domain }}{{ authelia_path }}?rd=$scheme://$http_host$request_uri;
    }

    # Root location - redirect to pgweb
    location = / {
        return 302 $scheme://$host{{ pgweb_path }}/;
    }
{% endif %}
}
