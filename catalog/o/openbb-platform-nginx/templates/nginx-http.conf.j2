# OpenBB Platform API - Nginx HTTP Configuration (for Certbot validation)
# Generated by Node Pulse Admiral

server {
    listen 80;
    listen [::]:80;
    server_name {{ openbb_domain }};

    # Allow Certbot validation
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Proxy to OpenBB Platform API
    location / {
        proxy_pass http://localhost:{{ openbb_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Increase timeouts for long-running API requests
        proxy_read_timeout 300;
        proxy_connect_timeout 300;
        proxy_send_timeout 300;
    }
}
