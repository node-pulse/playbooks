# Supabase Environment Configuration
# Generated by Node Pulse Admiral

############
# Secrets
# YOU MUST CHANGE THESE BEFORE GOING INTO PRODUCTION
############

POSTGRES_PASSWORD={{ postgres_password }}
JWT_SECRET={{ jwt_secret }}
ANON_KEY={{ anon_key }}
SERVICE_ROLE_KEY={{ service_role_key }}
DASHBOARD_USERNAME={{ dashboard_username }}
DASHBOARD_PASSWORD={{ dashboard_password }}

############
# Database - PostgreSQL
############

POSTGRES_HOST=db
POSTGRES_DB=postgres
POSTGRES_PORT=5432

############
# API Proxy - Kong
############

KONG_HTTP_PORT={{ kong_http_port }}
KONG_HTTPS_PORT={{ kong_https_port }}

############
# API - PostgREST
############

PGRST_DB_SCHEMAS=public,storage,graphql_public

############
# Auth - GoTrue
############

SITE_URL={{ site_url }}
ADDITIONAL_REDIRECT_URLS=
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
API_EXTERNAL_URL={{ api_external_url }}

# Email Auth
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_ADMIN_EMAIL={{ smtp_sender_email | default('admin@example.com') }}
SMTP_HOST={{ smtp_host | default('') }}
SMTP_PORT={{ smtp_port | default(587) }}
SMTP_USER={{ smtp_user | default('') }}
SMTP_PASS={{ smtp_pass | default('') }}
SMTP_SENDER_NAME=Supabase

# Phone Auth
ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=false

# Anonymous Users
ENABLE_ANONYMOUS_USERS=false

# Mailer URL paths
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

############
# Studio
############

STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project
SUPABASE_PUBLIC_URL={{ supabase_public_url }}

############
# Functions
############

FUNCTIONS_VERIFY_JWT=false

############
# Logs - Analytics
############

LOGFLARE_API_KEY={{ logflare_api_key }}

############
# Docker
############

DOCKER_SOCKET_LOCATION=/var/run/docker.sock

############
# Secrets for internal services
############

SECRET_KEY_BASE={{ secret_key_base }}
VAULT_ENC_KEY={{ vault_enc_key }}

############
# Image Proxy
############

IMGPROXY_ENABLE_WEBP_DETECTION=true
