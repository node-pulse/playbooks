# Supabase - Nginx HTTPS Configuration with Authelia 2FA
# Generated by Node Pulse Admiral
# SSL managed by Certbot

server {
    listen 80;
    listen [::]:80;
    server_name {{ supabase_domain }};

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ supabase_domain }};

    # SSL certificates (managed by Certbot)
    ssl_certificate /etc/letsencrypt/live/{{ supabase_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ supabase_domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;

    # Client body size for file uploads
    client_max_body_size 50M;

    # Logging
    access_log /var/log/nginx/supabase-access.log;
    error_log /var/log/nginx/supabase-error.log;

    # ============================================
    # Authelia 2FA Configuration
    # ============================================

    # Authelia authentication endpoint (internal only)
    location /authelia-verify {
        internal;
        proxy_pass http://127.0.0.1:9091/api/authz/auth-request;

        # Required headers for Authelia auth-request
        proxy_set_header X-Original-Method $request_method;
        proxy_set_header X-Original-URL $scheme://$http_host$request_uri;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Content-Length "";
        proxy_set_header Connection "";

        proxy_pass_request_body off;
        proxy_http_version 1.1;
        proxy_cache_bypass $cookie_session;
        proxy_no_cache $cookie_session;
    }

    # Authelia portal - 2FA login page
    location /authelia/ {
        proxy_pass http://127.0.0.1:9091/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-URI $request_uri;
        proxy_set_header X-Original-URL $scheme://$http_host$request_uri;
    }

    # Authelia without trailing slash - redirect to with slash
    location = /authelia {
        return 301 $scheme://$host/authelia/;
    }

    # Authelia static assets
    location /static/ {
        proxy_pass http://127.0.0.1:9091/static/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_hide_header Cache-Control;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }

    location = /manifest.json {
        proxy_pass http://127.0.0.1:9091/manifest.json;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /locales/ {
        proxy_pass http://127.0.0.1:9091/locales/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Authelia API
    location /api/ {
        # Check if this is an Authelia API request or Supabase API request
        # Authelia uses /api/authz, /api/state, /api/configuration, etc.
        # Supabase uses /auth/v1, /rest/v1, /storage/v1, etc. (not /api/)
        proxy_pass http://127.0.0.1:9091/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-URI $request_uri;
        proxy_set_header X-Original-URL $scheme://$http_host$request_uri;
    }

    # Authelia redirect location
    location @authelia_redirect {
        return 302 https://{{ supabase_domain }}/authelia/?rd=$scheme://$http_host$request_uri;
    }

    # ============================================
    # Supabase API Routes (public - no 2FA needed)
    # These use API keys for authentication
    # ============================================

    # Auth API - public (uses API keys)
    location /auth/ {
        proxy_pass http://localhost:{{ kong_http_port }}/auth/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # REST API - public (uses API keys)
    location /rest/ {
        proxy_pass http://localhost:{{ kong_http_port }}/rest/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # GraphQL API - public (uses API keys)
    location /graphql/ {
        proxy_pass http://localhost:{{ kong_http_port }}/graphql/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Storage API - public (uses API keys)
    location /storage/ {
        proxy_pass http://localhost:{{ kong_http_port }}/storage/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Larger body for file uploads
        client_max_body_size 50M;
    }

    # Functions API - public (uses API keys)
    location /functions/ {
        proxy_pass http://localhost:{{ kong_http_port }}/functions/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Realtime API - public (uses API keys, WebSocket)
    location /realtime/ {
        proxy_pass http://localhost:{{ kong_http_port }}/realtime/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket timeouts
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
    }

    # ============================================
    # Supabase Dashboard (protected by Authelia 2FA)
    # ============================================

    # Dashboard - protected by Authelia 2FA
    location / {
        # Authelia authentication
        auth_request /authelia-verify;
        auth_request_set $user $upstream_http_remote_user;
        auth_request_set $groups $upstream_http_remote_groups;
        auth_request_set $name $upstream_http_remote_name;
        auth_request_set $email $upstream_http_remote_email;

        # Redirect to Authelia login if not authenticated
        error_page 401 = @authelia_redirect;

        # Proxy to Kong (which routes to Studio)
        proxy_pass http://localhost:{{ kong_http_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Pass auth headers to backend
        proxy_set_header Remote-User $user;
        proxy_set_header Remote-Groups $groups;
        proxy_set_header Remote-Name $name;
        proxy_set_header Remote-Email $email;

        # Increase buffer sizes for Supabase
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;

        # Timeout settings
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}
